<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aop.mapper.UserMapper">


<select id="findByCardId" resultType="com.aop.entity.User" parameterType="java.lang.Integer">
SELECT card_id,username,account_password,account_balance,user_id FROM tb_account WHERE card_id=#{cardId}
</select>

<select id="findAll" resultType="com.aop.entity.User" >
SELECT card_id,username,account_password,account_balance,user_id FROM tb_account
</select>

<insert id="insert" parameterType="com.aop.entity.User">
INSERT INTO tb_account (username,account_password,account_balance,user_id)VALUES (#{username},#{accountPassword},#{accountBalance},#{UserId})
</insert>

<delete id="deleteByCardId" parameterType="java.lang.Integer">
DELETE FROM tb_account WHERE card_id=#{cardId}
</delete>

<update id="update">
    UPDATE tb_account SET account_balance=#{balance} WHERE card_id=#{cardId}
</update>

</mapper>